{
  "name": "@oiml/schema",
  "version": "0.1.1",
  "description": "OIML schema definitions",
  "author": "OpenIntent",
  "license": "MPL-2.0",
  "packageManager": "pnpm@10.18.3",
  "type": "module",
  "homepage": "https://github.com/oimladmin/oiml#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/oimladmin/oiml.git",
    "directory": "packages/schema"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm build",
    "publish:npm": "pnpm build && pnpm publish --access public",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "prettier": "^3.3.3"
  }
}
