{
  "name": "@oiml/schema",
  "version": "0.1.3",
  "description": "OIML schema definitions",
  "author": "OpenIntent",
  "license": "Apache-2.0",
  "type": "module",
  "homepage": "https://github.com/openintent/oiml#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/openintent/oiml.git",
    "directory": "packages/schema"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./templates/*": "./templates/*",
    "./schemas/*": "./schemas/*"
  },
  "files": [
    "dist",
    "templates",
    "schemas",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "generate:schemas": "node scripts/generate-json-schemas.js",
    "prepublishOnly": "pnpm build",
    "publish:npm": "pnpm build && pnpm publish --access public",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "zod-to-json-schema": "^3.23.5",
    "@types/node": "^22.0.0"
  }
}
