{
  "name": "@oiml/schema",
  "version": "0.1.10",
  "description": "OIML schema definitions",
  "author": "OIML",
  "license": "Apache-2.0",
  "type": "module",
  "homepage": "https://github.com/openintent/oiml#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/openintent/oiml.git",
    "directory": "packages/schema"
  },
  "exports": {
    "./templates/*": "./templates/*",
    "./schemas/*": "./schemas/*"
  },
  "files": [
    "dist",
    "templates",
    "schemas",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "generate:schemas": "node scripts/generate-json-schemas.js",
    "prepublishOnly": "pnpm build",
    "publish:npm": "pnpm build && pnpm publish --access public"
  },
  "dependencies": {
    "zod": "^3"
  },
  "devDependencies": {
    "zod-to-json-schema": "^3"
  }
}
