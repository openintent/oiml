{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "../..",
    "paths": {
      "packages/*": ["packages/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test", "**/packages/**"]
}
